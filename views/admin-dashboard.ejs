    html,body {
      background-color: #000;
      color: #fff;
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }
    .dashboard-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 40px;
    }
    .dashboard-title {
      font-size: 24px;
      font-weight: bold;
      text-align: center;
      margin-bottom: 20px;
    }
    .dashboard-section {
      margin-bottom: 40px;
      overflow-y: scroll;
      max-height: 400px;
    }
    .section-title {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 20px;
    }
    .table-header {
      background-color: #ffdd57;
    }
    .tag-used {
      background-color: #ff3860;
      color: #fff;
      padding: 4px 8px;
      border-radius: 4px;
    }
    .tag-unused {
      background-color: #23d160;
      color: #fff;
      padding: 4px 8px;
      border-radius: 4px;
    }
    .tag-new {
      background-color: #f9ca24;
      color: #000;
      padding: 4px 8px;
      border-radius: 4px;
      margin-left: 5px;
    }
    .used-code {
      color: #ff3860;
    }
    .unused-code {
      color: #23d160;
    }
    .logo {
      margin-bottom: 20px;
      background-color: #ffdd57;
      padding: 10px;
      max-height: 100;
      max-width: fit-content;
    }
    .logo img {
      max-width: 200px;
    }

    /* Responsive styles */
    @media screen and (max-width: 768px) {
      .dashboard-container {
        width: 90%;
        padding: 20px;
      }
    }
  </style>

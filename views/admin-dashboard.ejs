<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  <style>
    /* Custom styles */
    html,body {
      background-color: #000;
      color: #fff;
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }
    .dashboard-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 40px;
    }
    .dashboard-title {
      font-size: 24px;
      font-weight: bold;
      text-align: center;
      margin-bottom: 20px;
    }
    .dashboard-section {
      margin-bottom: 40px;
      overflow-y: scroll;
      height: 500px;
    }
    .section-title {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 20px;
    }
    .table-header {
      background-color: #ffdd57;
    }
    .tag-used {
      background-color: #ff3860;
      color: #fff;
      padding: 4px 8px;
      border-radius: 4px;
    }
    .tag-unused {
      background-color: #23d160;
      color: #fff;
      padding: 4px 8px;
      border-radius: 4px;
    }
    .toggle-button {
      background-color: #ffdd57;
      color: #000;
      border: none;
      margin-bottom: 10px;
    }
    .toggle-button:hover {
      background-color: #ffc107;
      color: #000;
    }
    .tag-new {
      background-color: #f9ca24;
      color: #000;
      padding: 4px 8px;
      border-radius: 4px;
      margin-left: 5px;
    }
    .used-code {
      color: #ff3860;
    }
    .unused-code {
      color: #23d160;
    }


    .logo {
      margin-bottom: 20px;
      background-color: #ffdd57;
      padding: 10px;
      max-height: 100;
      max-width: fit-content;
    }
    .logo img {
      max-width: 200px;
    }

    /* Responsive styles */
    @media screen and (max-width: 768px) {
      .dashboard-container {
        width: 90%;
        padding: 20px;
      }
    }
  </style>
</head>
<body style="background-color: #000;">
  <div class="dashboard-container">
    <div class="logo">
      <img src="/images/Redeem.png" alt="Logo">
    </div>

    <h1 class="dashboard-title">Admin Dashboard</h1>

    <div class="dashboard-section">
      <h2 class="section-title">Codes</h2>
      <div class="field is-grouped">
        <div class="control">
          <input id="numberInput" class="input" type="number" min="0" placeholder="Number of Codes" required>
        </div>
        <div class="control">
          <button id="submitBtn" class="button is-primary">Generate Codes</button>
        </div>
      </div>

      <table class="table is-fullwidth">
        <thead>
          <tr class="table-header">
            <th>S/N</th>
            <th>Redeemed Code</th>
          </tr>
        </thead>
        <tbody>

          <%if(codes.length !=0 ){%> 
          
          <% codes.forEach((code,index)=>{ %>
            <tr>
              <td><%=index+1 %></td>
              <%if(code.used){%> <td><span class="tag-used used-code">Used</span> <%=code.code%></td> <%} else {%>
              <td><span class="tag-unused unused-code">Unused</span>  <%=code.code%></td> <%}%>

              <!-- <td><span class="tag-used used-code">Used</span> ABC123</td> -->
            </tr>
       <%   }) %>
          <%} else {%>
            <div class="is-fullwith">
              No Code has been Generated!
            </div> <%}%>
          <!-- Add more rows as needed -->
        </tbody>
      </table>
    </div>
    <div class="dashboard-section">
      <h2 class="section-title">Redeemed Code</h2>
      <table class="table is-fullwidth">
        <thead>
          <tr class="table-header">
            <th>S/N</th>
            <th>Email</th>
            <th>Order ID</th>
            <th>Purchased Product</th>
            <th>Redeemed Code</th>
          </tr>
        </thead>
        <tbody>
          <% if (rc.length !== 0) { %>
            <% rc.forEach((rci, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= rci.email %></td>
                <td><%= rci.orderID %></td>
                <td><%= rci.purchasedProduct %></td>
                <td><%= rci.redeemedCode %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <div class="is-fullwith">
              No records at the moment!
            </div>
          <% } %>
        </tbody>
      </table>
      
    </div>

    <!-- <div class="field is-grouped">
      <div class="control">
        <button class="button is-primary toggle-button">Redeemed Code</button>
      </div>
      <div class="control">
        <button class="button is-primary toggle-button">Generate Code</button>
      </div>
    </div> -->
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js" integrity="sha512-uMtXmF28A2Ab/JJO2t/vYhlaa/3ahUOgj1Zf27M5rOo8/+fcTUVH0/E0ll68njmjrLqOBjXM3V9NiPFL5ywWPQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  <script>
    // Assuming you have a button with id "submitBtn" and an input field with id "numberInput"

// Function to handle the button click event
function handleClick() {
  // Get the number value from the input field
  const number = document.getElementById('numberInput').value;

  // Send the number value to the server using Axios
  axios.post('/admin/create-codes', { number })
    .then((d) => {
      swal("Success!", "Codes Generated!", "success");
      setTimeout(() => {
    location.reload()
        
      }, 2000);
    })
    .catch((error) => {
      swal("Error!", "Failed to generate Codes!", "error");

    });
}

// Add a click event listener to the button
document.getElementById('submitBtn').addEventListener('click', handleClick);

  </script>
</body>
</html>

  <div class="dashboard-container">
    <div class="logo">
      <img src="/images/Redeem.png" alt="Logo">
    </div>

    <h1 class="dashboard-title">Admin Dashboard</h1>

    <div class="dashboard-section">
      <h2 class="section-title">Codes</h2>
      <div class="field">
        <label class="label">Code Titles</label>
        <div class="control" id="titleInputContainer">
          <div class="field has-addons">
            <div class="control is-expanded">
              <input class="input title-input" type="text" placeholder="Title for Code">
            </div>
            <div class="control">
              <button class="button is-primary remove-title-btn" disabled>
                <span class="icon">
                  <i class="fas fa-minus"></i>
                </span>
              </button>
            </div>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <button id="addTitleBtn" class="button is-primary">
              <span class="icon">
                <i class="fas fa-plus"></i>
              </span>
              <span>Add Title</span>
            </button>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button id="submitBtn" class="button is-primary generate-btn" disabled>Generate Codes</button>
        </div>
      </div>


        <table class="table is-fullwidth">
        <thead>
          <tr class="table-header">
            <th>S/N</th>
            <th>Code Title</th>
            <th>Redeemed Code</th>
          </tr>
        </thead>
        <tbody>
          <% if (codes.length !== 0) { %> 
            <% codes.forEach((code, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= code.title %></td>
                <% if (code.used) { %>
                  <td><span class="tag-used used-code">Used</span> <%= code.code %></td>
                <% } else { %>
                  <td><span class="tag-unused unused-code">Unused</span> <%= code.code %></td>
                <% } %>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3">No Code has been Generated!</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="dashboard-section">
      <h2 class="section-title">Redeemed Code</h2>
      <table class="table is-fullwidth">
        <thead>

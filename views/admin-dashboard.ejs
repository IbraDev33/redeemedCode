            <th>Email</th>
            <th>Order ID</th>
            <th>Code Title</th>

            <th>Purchased Product</th>
            <th>Redeemed Code</th>
          </tr>
        </thead>
        <tbody>
          <% if (rc.length !== 0) { %>
            <% rc.forEach((rci, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= rci.email %></td>
                <td><%= rci.orderID %></td>
                <td><%= rci.title %></td>

                <td><%= rci.purchasedProduct %></td>
                <td><%= rci.redeemedCode %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6">No records at the moment!</td>
            </tr>
          <% } %>
        </tbody>
      </table>
